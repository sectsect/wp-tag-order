root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,ts}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{scss,sass,css}]
indent_style = space
indent_size = 2

[{Movefile,.eslintrc}]
indent_style = space
indent_size = 2
